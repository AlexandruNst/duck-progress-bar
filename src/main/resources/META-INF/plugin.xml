<idea-plugin>
  <id>com.github.rougsig.duck-progress-bar</id>
  <name>Duck Progress Bar</name>
  <version>0.0.1</version>
  <vendor email="rougsig@gmail.com" url="https://github.com/rougsig/duck-progress-bar">Andrey Stepankov</vendor>
  <description>Duck progress bar for intellij based IDEs</description>

  <idea-version since-build="173.0"/>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij" />

  <application-components>
    <component>
      <implementation-class>com.github.rougsig.duckprogressbar.DuckApp</implementation-class>
    </component>
  </application-components>
</idea-plugin>
